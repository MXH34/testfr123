local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()

local Window = WindUI:CreateWindow({
    Title = "BetterRingta",
    Icon = "star",
    Author = "Ringta",
    Folder = "Ringtrash"
})

-- RLGL TAB
local RLGLTab = Window:CreateTab({
    Title = "RLGL",
    Icon = "siren"
})

-- RLGL Sections
local DalgonaSection = RLGLTab:CreateSection({Title = "Dalgona"})
local TugOfWarSection = RLGLTab:CreateSection({Title = "Tug of War"})
local HideAndSeekSection = RLGLTab:CreateSection({Title = "Hide and Seek"})
local JumpGlassSection = RLGLTab:CreateSection({Title = "Jump Rope / Glass Bridge"})
local MiscSection = RLGLTab:CreateSection({Title = "Misc Features"})
local CombatSection = RLGLTab:CreateSection({Title = "Combat"})

-- Finish RLGL Button
RLGLTab:Button({
    Text = "Finish RLGL",
    Func = function()
        if not isGame("RedLightGreenLight") then
            WindUI:Notify({
                Title = "Red Light Green Light",
                Content = "Wait for game to start!",
                Duration = 4,
                Icon = "alert"
            })
            return
        end
        local root = lplr.Character and lplr.Character:FindFirstChild("HumanoidRootPart")
        if root then
            root.CFrame = CFrame.new(-215.04, 1023.05, 142.77)
            WindUI:Notify({
                Title = "Teleported!",
                Content = "You were moved to the Left House!",
                Duration = 3,
                Icon = "star"
            })
        end
    end
})
